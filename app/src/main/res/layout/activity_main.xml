<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codebay.vam.commoncomponentsdemo.MainActivity">

    <Button
        android:id="@+id/btn_show_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示进度"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <Button
        android:id="@+id/btn_show_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示确定"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="88dp"
        android:layout_below="@+id/btn_show_progress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <Button
        android:id="@+id/btn_login_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get提交"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="88dp"
        android:layout_below="@+id/btn_show_confirm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <Button
        android:id="@+id/btn_login_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post提交"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="88dp"
        android:layout_below="@+id/btn_login_get"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btn_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_login_post"
        android:layout_alignRight="@+id/btn_login_post"
        android:layout_below="@+id/btn_login_post"
        android:text="用户登录"/>
    <Button
        android:id="@+id/btn_to_user_mgr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_login_post"
        android:layout_alignRight="@+id/btn_login_post"
        android:layout_below="@+id/btn_login_post"
        android:text="跳转到用户管理界面"/>

</RelativeLayout>
